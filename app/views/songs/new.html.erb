
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <div>
  <%= f.label :title, "Song Title"%>
  <%= f.text_field :title %>
  <br />
  </div>

  <div>
  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br />
  </div>

  <div>
  <%= f.label "Select Genre"%>
  <%= f.select :genre_id, Genre.all, :name, :name) %>
  <br />
  </div>

  <%= f.submit %>
<% end %>
